$ctx = music-bar

.{$ctx}
	width 100%
	height 72px

	position fixed
	z-index 990
	top 0
	border-bottom 1px solid darker(#ccc, 20%)

	&__player
		height 50px
		color #FFF
		background-color #567CA4

	&__panel
		height 50px

	&__timeline
		margin-right 40px
		position relative
		height 22px
		background-color #4B6D94

	&__download
		float right
		width 40px
		height 22px
		text-align center
		font-size 16px
		background-color #4B6D94

	&__download-link
		color #fff
		display inline-block
		padding-top 2px

	&__timeline-scrub-bar
		display table
		width 100%

		& :focus vg-scrub-bar-current-time
			border-right none

		[role=slider]
			margin-top 0
			margin-bottom 0
			height 22px
			background #4B6D94

	&__time-current
		height 22px
		position absolute
		left 0
		font-size 14px
		font-family 'Open Sans', sans-serif
		color #fff

	&__time-left
		position absolute
		top 0
		right 0
		height 22px
		display block
		font-size 14px
		font-family 'Open Sans', sans-serif
		color #fff

	&__track-name
		position absolute
		top 0
		right 0
		bottom 0
		left 0
		text-align center
		height 22px
		line-height 22px

	&__brand
		position absolute
		left 0
		padding-left 10px
		width 200px
		height 50px
		font-size 24px
		font-weight 300
		line-height 50px

	&__brand-icon
		font-size 28px

	&__controls
		position absolute
		display table
		left 210px
		height 50px

	&__search
		float right

	&__search-input
		color #D9E2EC
		background-color #4B6D94
		border-color #4B6D94

		&::-moz-placeholder
			color #D9E2EC
			opacity 1 

		&:-ms-input-placeholder
			color #D9E2EC

		&::-webkit-input-placeholder
			color #D9E2EC

		&:focus
			color #2B2F33
			background-color #fff

			&::-moz-placeholder
				color #2B2F33
				opacity 1

			&:-ms-input-placeholder
				color #2B2F33

			&::-webkit-input-placeholder
				color #2B2F33

	&__volume
		float right

	&__right
		position absolute
		right 0
		width 50%
		height 50px
		padding-right 10px

	&__fork
		margin-right 20px
		float right
		font-size 24px
		line-height 50px
		color #fff

		&:hover
			color rgba(#fff, 0.5)

	&__username
		float right
		line-height 50px
		margin-right 20px

	&__logout
		margin-right 20px
		line-height 50px
		float right
		cursor pointer
		color #fff

		&:hover
			color rgba(#fff, 0.5)

	& vg-controls .controls-container
		background-color transparent

	& vg-play-pause-button
		font-size 24px

	& vg-scrub-bar-current-time
		background-color rgba(#fff, 0.3)

	& vg-volume
		width auto
		font-size 24px
		text-align left

		&:before
			content ''
			display inline-block
			vertical-align middle
			height 100%

	& vg-mute-button
		display inline-block
		vertical-align middle
		width auto

	& volume-horizontal-bar
		display inline-block
		position relative
		height 50px
		width 150px
		vertical-align middle

		.horizontalVolumeBar
			height 100%
			width 100%
			display block
			position absolute

		.volumeBackground
			height 10px
			width 140px
			left 0
			top 20px
			background-color #4B6D94
			position absolute

		.volumeValue
			width 100%
			height 10px
			background-color rgba(#fff, 0.3)
			position absolute

		.volumeClickArea
			width 100%
			height 20px
			position absolute
