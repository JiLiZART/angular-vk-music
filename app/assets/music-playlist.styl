$ctx = music-playlist

.{$ctx}
	&__title
		padding 22px 40px
		font-size 18px

	&__content
		padding 0 20px 20px

	&__table-row-play-icon
		cursor pointer
		margin-right 20px

	&__table-row-add-icon
		cursor pointer
		margin-right 20px

	&__table-row-title
		font-size 16px

	&__table-row
		border none

		&_active
			background-color #dfe2e9

	& &__table-head
		border-bottom none
